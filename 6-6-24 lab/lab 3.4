#include <string.h>
#include <stdbool.h>

// Function to remove the first occurrence of each character from 'a' to 'z'
void removeFirstOccurrences(char *s) {
    int len = strlen(s);
    bool found[26] = { false };

    int j = 0; // index for the new length of the string
    for (int i = 0; i < len; i++) {
        char c = s[i];
        if ('a' <= c && c <= 'z' && !found[c - 'a']) {
            found[c - 'a'] = true;
        } else {
            s[j++] = s[i];
        }
    }
    s[j] = '\0'; // terminate the modified string
}

int main() {
    char s[] = "aabcbbca";
    char lastNonEmptyState[100]; // to store the state of s before it becomes empty
    strcpy(lastNonEmptyState, s);

    while (strlen(s) > 0) {
        strcpy(lastNonEmptyState, s); // save current state
        removeFirstOccurrences(s); // remove first occurrences of each character
    }

    printf("The state of the string right before it becomes empty: %s\n", lastNonEmptyState);
    return 0;
}
